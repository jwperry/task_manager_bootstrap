<a class="btn btn-primary btn-lg active" role="button" href="/tasks">Task Index</a>
<a class="btn btn-warning btn-lg active" role="button" href="/">Home</a>

<h1 class="text-center">All Tasks</h1>

<% @tasks.each do |task| %>
  <h3 class="bg-info col-md-12"><%= task.id %>: <a href="/tasks/<%= task.id %>"><%= task.title %></a></h3>
  <a href="/tasks/<%= task.id %>/edit">Edit</a>
  <form action="/tasks/<%= task.id %>" method="post">
    <input type="hidden" name="_method" value="delete">
    <input type="submit" value="Delete">
  </form>
<% end %>